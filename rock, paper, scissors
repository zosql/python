# This Rock, Paper, Scissors program handles variations in lower or upper case inputs
# This program does not handle invalid inputs

import random

print("Welcome to Rock, Paper, Scissors!")
print("")
print("The rules are simple:")
print("- Rock beats Scissors")
print("- Paper beats Rock")
print("- Scissors beats Paper")
print("")

user_score = 0
computer_score = 0
play_again = "yes"
while play_again == "yes":
  user_choice = input("Enter your choice (rock, paper or scissors): ").lower()
  choices = ["rock", "paper", "scissors"]
  computer_choice = random.choice(choices)
  print("")
  if user_choice == computer_choice:
    print("It's a tie")
    computer_score += 0.5
    user_score += 0.5
  elif  (user_choice == "rock" and computer_choice == "paper") or (user_choice == "paper" and computer_choice == "scissors") or user_choice == "scissors" and computer_choice == "rock":
    computer_score += 1
    print(f"Computer wins ({computer_choice}). You lose ({user_choice}).")
  else:
    user_score += 1
    print(f"You win ({user_choice}). Computer loses ({computer_choice}).") 
  print(f"Computer's Score: {computer_score}")
  print(f"User's Score: {user_score}")
  print("")
  play_again = input("Do you want to play again? (yes/no): ").lower()
